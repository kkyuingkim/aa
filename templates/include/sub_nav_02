<script>
	$(".depth li a").click(function (){
		$(".depth li a").addClass("on");
	});
</script>

<script>
function menu_toggle(layer) {
	$("#" + layer).slideToggle(0);
}
function menu_up(layer) {
	$("#" + layer).slideUp(0);
}
$(".snb_menu").click(function() {
	var
		text = $(this).text();
	$(".sh_value").val(value);
	$(".menu_item").val(text);
	$("#select_open").slideUp(0);
	shop_list(1);
});

</script>
